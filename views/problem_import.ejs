<% this.title = '导入题目'; %>
<% include header %>
<div class="padding">
  <div style="margin-bottom: 30px; ">
    <h1 style="margin-bottom: 10px; ">导入题目</h1>
    从另一个运行 ZOJ 的网站导入题目。
  </div>

  <form class="ui form" action="<%= zoj.utils.makeUrl(['problem', problem.id, 'import']) %>" method="post">
      <% if (problem.allowedManage) { %>
          <div class="field">
              <label>题目编号</label>
              <input type="text" name="id" value="<%= problem.id ? problem.id : '' %>" placeholder="留空则自动延伸" <%= problem.new ? '' : 'disabled' %>>
          </div>
      <% } %>
      <div class="field">
          <label>题目链接</label>
          <input type="text" name="url" placeholder="如：http://example.com/problem/1">
      </div>
      <button type="submit" class="ui button">提交</button>
  </form>
<% include footer %>
